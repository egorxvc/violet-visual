---
import '@fontsource/montserrat';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	body {
		transition: all .5s ease-in-out;
	}
	@font-face {
		font-family: 'GellaDisplay';
		src: url('/fonts/GellaDisplay-ExpandedMedium.woff') format('woff'), url('violet-visual/fonts/GellaDisplay-ExpandedMedium.woff2') format('woff');
		font-weight: 400;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'GellaDisplay';
		src: url('/fonts/GellaDisplay-Light.woff') format('woff'), url('violet-visual/fonts/GellaDisplay-Light.woff2') format('woff2');
		font-weight: 200;
		font-style: normal;
		font-display: swap;
	}
</style>